MCGO L3 IF MCSUB(%A1.,%T1.,%T1.) = < >
MCGO L3 IF MCSUB(%A1.,%T1.,%T1.) = <	>
MCGO L3 IF MCSUB(%A1.,%T1.,%T1.) = <
>
MCSUB(%A1.,%T1.,%T1.)+
%L3.+
